rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user is accessing their own data
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // Donors collection
    match /donors/{userId} {
      // Allow authenticated users to read all profiles (needed for leaderboard)
      allow read: if isAuthenticated();
      // Allow users to write ONLY their own profile
      allow write: if isOwner(userId);
    }

    // Requests collection
    match /requests/{requestId} {
      allow read: if true;
      allow create: if request.auth != null;
      allow update, delete: if request.auth != null && (
        request.auth.uid == resource.data.userId || 
        (exists(/databases/$(database)/documents/donors/$(request.auth.uid)) &&
         get(/databases/$(database)/documents/donors/$(request.auth.uid)).data.role == 'admin')
      );
    }

    // Donations collection
    match /donations/{donationId} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated(); // Should probably be more restricted
    }

    // Appointments collection
    match /appointments/{appointmentId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow update: if isAuthenticated();
    }

    // Alerts collection
    match /alerts/{alertId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated(); // Ideally restrict to admin, but for now allow auth users to fix permission error
      allow update: if isAuthenticated();
    }
    
    // Default deny
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
